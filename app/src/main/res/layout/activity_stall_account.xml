<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9AD8EA"
    tools:context=".Stall_Account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgback"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:src="@drawable/backbuttonn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stall Details"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgback"
                app:layout_constraintTop_toTopOf="@id/imgback"
                app:layout_constraintBottom_toBottomOf="@id/imgback"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/label_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/editviewname"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/vendorinput"
                android:hint=" Enter Food Name"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_food"
                android:layout_marginHorizontal="12dp" />

            <TextView
                android:id="@+id/label_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editviewname"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/descption"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/vendorinput"
                android:hint=" Food Description"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_description"
                android:layout_marginHorizontal="12dp" />

            <TextView
                android:id="@+id/label_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descption"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/vendorinput"
                android:hint=" Food Price"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_price"
                android:layout_marginHorizontal="12dp" />

            <TextView
                android:id="@+id/label_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Select Image"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/selectimg"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/addimg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_image" />

            <Button
                android:id="@+id/uplo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Upload"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectimg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="12dp" />

            <Button
                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Save"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/selectimg"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>